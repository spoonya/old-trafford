include ../includes/index/mixins

header#header.header
  h1.header__title Олд Траффорд - Бухгалтерские услуги в Минске
  .header__top.container
    block menu
    a.header__mail(href="mailto:buhsale@mail.ru")
      +icon('header__icon icon', 'message')
      p buhsale@mail.ru
  +decorator
  .header__bottom
    .header__inner.container
      .header__content
        .header__logo-wrapper
          img.header__logo(src="images/index/header/logo.svg", alt="Олд Траффорд")
          h2.header__subtitle Бухгалтерское обслуживание бизнеса и физических лиц
        address.header__info
          +location
          +phones
      +callbackBtn('Обратный звонок')
      a(href="fanzone.html").header__club
        img.header__club-img(src="images/index/header/club.png", alt="Minsk Reds Supporters Club")
