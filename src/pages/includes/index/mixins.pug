mixin decorator(modif= none)
  .decorator(class= modif)

mixin title(title)
  h2.title= title
  +decorator('decorator--small')

mixin callbackBtn
  button.callback Оставить заявку

mixin location(isLocationIcon= true, isMetroIconLarge = false)
  .location
    a.location__address(href="https://yandex.ru/maps/?um=constructor%3A2a696978720ea53ebd9e73ad180c28869d75ec04b1c62260721b4917e3c98ebd&source=constructorLink" rel="noreferrer" target="_blank")
      if isLocationIcon
        +icon('location__icon icon', 'location')
      p Минск, ул. Энгельса, дом 34, офис 305
    .location__metro
      if isMetroIconLarge
        img.location__icon.icon.icon--large(src="images/index/header/metro-lg.png", alt="")
      else
        img.location__icon.icon(src="images/index/header/metro.png", alt="")
      .location__metro-item
        p Октябрьская
        p Купаловская

mixin descripItem(arrTitle, icon, arrTxt, arrList)
  .descrip__wrapper
    .descrip__item
      .descrip__feat
        p= arrTitle[0]
        +icon('descrip__icon', icon)
        p= arrTitle[1]
      .descrip__txt
        for text in arrTxt
          p= text
        if arrList
          ul
            for text in arrList
              li= text

mixin providerItem(txt)
  .provider__item
    +icon('provider__icon', 'checked')
    p.provider__txt= txt

mixin plusesItem(txt)
  .pluses__item
    +icon('pluses__icon', 'plus')
    p.pluses__txt= txt

mixin feeItem(link, img, num, txt)
  a.fee__item(href= link)
    .fee__img-wrapper
      img.fee__img(src=`images/index/fee/${img}`, alt="")
    .fee__title-wrapper
      span.fee__num= num
      h3.fee__title= txt

mixin featuresItem(icon, title, txt)
  .features__item
    +icon('features__icon', icon)
    h3.features__item-title= title
    p.features__item-txt= txt

mixin clientsItem(img)
  img.clients__item(src=`images/index/clients/${img}`, alt="")

mixin workItem(icon, num, txt)
  .work__item
    .work__img
      +icon('work__icon', icon)
      span.work__num= num
    p.work__txt= txt
