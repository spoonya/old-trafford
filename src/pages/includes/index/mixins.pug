mixin decorator(modif= none)
  .decorator(class= modif)

mixin title(title)
  h2.title= title
  +decorator('decorator--small')

mixin summary(className)
  summary(class= className)
    span подробнее
    +icon(`${className}-icon`, 'summary-arrow')

mixin descripItem(arrTitle, icon, arrTxt, arrList)
  li.descrip__item.swiper-slide
    .descrip__feat
      p= arrTitle[0]
      +icon('descrip__icon', icon)
      p= arrTitle[1]
    details.descrip__details(open)
      +summary('descrip__summary')
      .descrip__txt
        for text in arrTxt
          p= text
        if arrList
          ul
            for text in arrList
              li= text

mixin providerItem(txt)
  li.provider__item.swiper-slide
    .provider__icon
      <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 17.1 16.9" style="enable-background:new 0 0 17.1 16.9;" xml:space="preserve">
      <path class="st0" d="M7,16.1c0.5,0.5,1.7,0.4,1.8-0.5c0.8-5.1,4.6-9.4,7.6-13.5C17.2,1,15.3-0.1,14.5,1c-2.7,3.7-6,7.6-7.4,12.1 c-1.5-1.5-3-3.1-4.7-4.4c-1.1-0.9-2.6,0.7-1.5,1.5C3.1,12,5,14.1,7,16.1z"/>
      </svg>
    p.provider__txt= txt

mixin plusesItem(txt)
  li.pluses__item
    .pluses__icon
      <svg width="24" height="29" viewBox="0 0 24 29" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="15" r="11.5" stroke="#D5251F"/>
        <path d="M8.322 15.43V14.618H11.556V11.048H12.41V14.618H15.63V15.43H12.41V19H11.556V15.43H8.322Z" fill="#D5251F"/>
      </svg>
    p.pluses__txt= txt

mixin feeItem(link, img, num, txt, disclaimer= null)
  li.fee__item.swiper-slide
    a.fee__link(href= `${link}.html`)
      if disclaimer
        p.fee__disclaimer= disclaimer
      .fee__img-wrapper
        img.fee__img.lozad(data-src=`images/index/fee/${img}` width="300" height="300" data-placeholder-background="#f1f1f1" alt="")
      .fee__title-wrapper
        span.fee__num= num
        h3.fee__title= txt

mixin featuresItem(icon, title, txt)
  li.features__item.swiper-slide
    +icon('features__icon', icon)
    h3.features__item-title= title
    p.features__item-txt= txt

mixin clientsItem(img, link, label)
  li.clients__item.swiper-slide
    a.clients__link(href= link aria-label= label)
    img.clients__img.lozad(data-src=`images/index/clients/${img}` width="200" height="80" alt="")

mixin workItem(icon, num, txt)
  li.work__item.swiper-slide
    .work__img
      +icon('work__icon', icon)
      span.work__num= num
    p.work__txt= txt
