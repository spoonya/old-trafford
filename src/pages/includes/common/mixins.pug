        p.phones__num +375 (29) 878-76-56

mixin callbackBtn
  button.callback Оставить заявку

mixin consult(title, subtitle)
  section.consult.container
    img.consult__img(src="images/index/consult/phone.png", alt="")
    .consult__info
      h2.consult__title= title
      h3.consult__subtitle= subtitle
      +callbackBtn
      +phones

mixin crumbs(arrLinks)
  nav.crumbs.container
    ul
      li: a(href='index.html') Главная
      for link in arrLinks
        li: a(href= link.href)= link.name

mixin titlePage(title, isContainer= false)
  if isContainer
    h2.title-page.container= title
  else
    h2.title-page= title

mixin descripPage(descrip)
  p.descrip-page= descrip

mixin remark(remark)
  .remark
    p.remark__txt= remark

mixin descripList(modif, icon, title, arrItems, arrTxt= null)
  .descrip-list
    h4.descrip-list__title= title
    ul
      for item in arrItems
        li.descrip-list__item
          +icon(`descrip-list__icon ${modif}`, icon)
          p= item
    if arrTxt
      for txt in arrTxt
        p.descrip-list__txt= txt

mixin serviceList(arrItems, modif=null)
  ul.service-list
    for item in arrItems
      li(class= modif)
        .service-list__content
          .service-list__icon
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12.612 1.29187H5.38783C2.87033 1.29187 1.29199 3.07437 1.29199 5.59687V12.4035C1.29199 14.926 2.86283 16.7085 5.38783 16.7085H12.6112C15.137 16.7085 16.7087 14.926 16.7087 12.4035V5.59687C16.7087 3.07437 15.137 1.29187 12.612 1.29187Z" stroke="#D5251F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M6.0332 9.00021L8.01154 10.9777L11.9665 7.02271" stroke="#D5251F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          if item.href
            a(href= `${item.href}.html`)= item.txt
          else
            p= item.txt

mixin form(formID, placeholders, names, btnTxt)
  form(id= formID method= "POST",).form
    .form__inner
      .form__control
        span.form__error
        input#form-name.form__input(name= names.name type="text" placeholder= placeholders.name)
      .form__control
        span.form__error
        input#form-phone.form__input(name= names.phone type="text" placeholder= placeholders.phone)
      .form__control
        span.form__error
        input#form-email.form__input(name= names.email type="email" placeholder= placeholders.email)
    .form__control
      span.form__error
      textarea#form-message.form__input(name= names.msg maxlength="250" placeholder= placeholders.msg)
    button.form__btn= btnTxt
