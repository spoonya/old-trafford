mixin form(formID, placeholders, names, btnTxt)
  form(id= formID method="POST",).form
    .form__inner
      .form__control
        span.form__error
        input#form-name.form__input(name= names.name type="text" placeholder= placeholders.name)
      .form__control
        span.form__error
        input#form-phone.form__input(name= names.phone type="text" placeholder= placeholders.phone)
      .form__control
        span.form__error
        input#form-email.form__input(name= names.email type="text" placeholder= placeholders.email)
    .form__control
      span.form__error
      textarea#form-message.form__input(name= names.msg maxlength="250" placeholder= placeholders.msg)
    button.form__btn= btnTxt
