{
  "env": {
    "jquery": true,
    "browser": true
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never"
      }
    ],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "import/no-unresolved": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
